<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maxibi.kamusku">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNight">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeDay.NoActionBar"></activity>
        <activity
            android:name=".SplashActivity"
            android:label="Kamusku"
            android:theme="@style/AppThemeNight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopUp"
            android:label="PopUpActivity"></activity>
        <activity android:name=".BookmarkActivity"
            android:label="Bookmark"></activity>
    </application>

</manifest>